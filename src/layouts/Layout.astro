---
import '../styles/global.css';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>My {title}</title>
	</head>
	<body class="bg-sky-200">
		<div class="m-4">
			{
				title !== 'homepage' ? (
					<a
						href="/"
						class="w-fit rounded bg-slate-100 p-4 text-2xl font-bold capitalize underline"
					>
						My {title} <span>&larr;</span>Back{' '}
					</a>
				) : (
					<h1 class="m-2 w-fit rounded bg-slate-100 p-4 text-2xl font-bold capitalize underline ">
						My {title}
					</h1>
				)
			}
		</div>
		<slot />
	</body>
</html>

const { frontmatter } = Astro.props;
---

<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>
	</head>
	<!-- ... -->
	<body class="bg-emerald-50">
		<main>
			<header class="shadow mb-8 sticky top-0 bg-amber-50">
				<div>
					<a href="/how-to" class="block text-black text-2xl font-bold text-center py-4"> HOW TO's</a>
					 
				</div>
				 
			</header>
			<div
				class="container mx-auto my-4 prose bg-amber-50 p-12 m-12 
				rounded-lg max-w-none w-3/4 prose-stone dark:prose-invert prose-img:rounded-xl 
				prose-headings:underline prose-a:text-blue-600 
				"
			>
				<slot />
			</div>
		</main>
	</body>
